{
  "name": "stabilizer",
  "version": "1.0.0",
  "description": "stabilizer app for real-time issue tracking",
  "main": "index.js",
  "scripts": {
    "start": "nodemon",
    "prod": "node dist/index.js",
    "build": "tsc",
    "watch": "tsc -w",
    "generate-typedefs": "npm run create-schema && npm run create-types",
    "create-schema": "graphql get-schema",
    "create-types": "graphql-schema-typescript --namespace=GQL --global=true --typePrefix='' generate-ts --output=src/__typedefs/graphqlTypes.d.ts src/__typedefs",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Prithivraj.k",
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^2.10.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "googleapis": "^47.0.0",
    "graphql": "^14.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.19",
    "mongoose": "^5.9.1",
    "nodemailer": "^6.4.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.16.1",
    "@types/graphql": "^14.5.0",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/lodash": "^4.14.149",
    "@types/mongoose": "^5.7.1",
    "@types/node": "^13.7.1",
    "@types/nodemailer": "^6.4.0",
    "@types/ws": "^7.2.1",
    "codelyzer": "^5.0.1",
    "graphql-cli": "^3.0.14",
    "graphql-schema-typescript": "^1.3.2",
    "nodemon": "^1.19.1",
    "ts-node": "^8.2.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
